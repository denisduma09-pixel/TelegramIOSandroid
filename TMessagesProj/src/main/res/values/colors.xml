    <!-- Cosmic Backgrounds -->
    <color name="ios26_dark_space">#0A0A1A</color>
    <color name="ios26_deep_cosmos">#1A1A2A</color>
    <color name="ios26_galaxy_purple">#2A1A3A</color>
    
